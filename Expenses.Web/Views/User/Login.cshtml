@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="login-form">
    <form method="post">
        @Html.HiddenFor(it => it.ReturnUrl)

        <h2 class="text-center">Log in</h2>
        <div class="form-group">
            @Html.TextBoxFor(it => it.UserName, new { @class = "form-control", placeholder = "User name" })
            @Html.ValidationMessageFor(it => it.UserName)
        </div>
        <div class="form-group">
            @Html.PasswordFor(it => it.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.ValidationMessageFor(it => it.Password)
        </div>
        @if (ViewContext.ModelState.ContainsKey(string.Empty))
        {
            <div class="form-group">
                <div class="alert alert-danger">
                    @Html.ValidationSummary(true)
                </div>
            </div>
        }
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Log in</button>
        </div>
        <div class="clearfix">
            <a asp-area="" asp-controller="User" asp-action="Register" class="float-right">Create an Account</a>
        </div>
    </form>
</div>

@section Styles {
    <link href="~/css/Login.css" rel="stylesheet" />
} 